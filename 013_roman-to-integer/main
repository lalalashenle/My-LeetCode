/// Source : https://leetcode-cn.com/problems/roman-to-integer/
/// Author : lalalashenle
/// Time   : 2020-1月

#include <iostream>
#include <algorithm>
#include <vector>
#include <map>
#include <set>

using namespace std;

// 分解整数，存入数组。
class Solution {
public:
    int romanToInt(string s) {
        int res = 0;
        for (int i = 0; i < s.length(); i++) {
            if (s[i] == 'I') {
                if (i + 1 < s.length() && s[i + 1] == 'V') {
                    res += 4;
                    i++;
                } else if (i + 1 < s.length() && s[i + 1] == 'X') {
                    res += 9;
                    i++;
                } else
                    res += 1;
            } else if (s[i] == 'X') {
                if (i + 1 < s.length() && s[i + 1] == 'L') {
                    res += 40;
                    i++;
                } else if (i + 1 < s.length() && s[i + 1] == 'C') {
                    res += 90;
                    i++;
                } else
                    res += 10;
            } else if (s[i] == 'C') {
                if (i + 1 < s.length() && s[i + 1] == 'D') {
                    res += 400;
                    i++;
                } else if (i + 1 < s.length() && s[i + 1] == 'M') {
                    res += 900;
                    i++;
                } else
                    res += 100;
            } else if (s[i] == 'V')
                res += 5;
            else if (s[i] == 'L')
                res += 50;
            else if (s[i] == 'D')
                res += 500;
            else if (s[i] == 'M')
                res += 1000;
        }
        return res;
    }
};

int main() {
    Solution test;
    string s = "III";
    int ans = test.romanToInt(s);
    cout << ans;

    return 0;
}
